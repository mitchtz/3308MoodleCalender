<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mitchtz.webview.MainScreenActivity">

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:textStyle="normal" android:textSize="50sp"/>
     <!--Moodle Activity gets called with this button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Calender"
        android:id="@+id/moodleButton"
        android:layout_marginBottom="92dp"
        android:layout_above="@+id/events"
        android:layout_centerHorizontal="true"
        android:onClick="callMoodle" />
    <!--View Events Activity gets called with this button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Events"
        android:id="@+id/events"
        android:layout_marginBottom="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="viewEvents"/>

</RelativeLayout>
